{
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1",
    "test/(.*)": "<rootDir>/test/$1"
  },
  "rootDir": "../../",
  "setupFiles": [
    "<rootDir>/test/common/jest.factory.ts"
  ],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
