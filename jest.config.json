{
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1",
    "test/(.*)": "<rootDir>/test/$1"
  },
  "rootDir": "./",
  "setupFiles": [
    "<rootDir>/test/unit/jest.helpers.ts",
    "<rootDir>/test/unit/jest.factory.ts"
  ],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node"
}
